{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "src",
    "types": ["node", "jest"],
    "lib": ["ESNext"]
  },
  "include": ["src/**/*.ts"]
}
